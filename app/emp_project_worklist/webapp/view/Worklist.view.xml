<mvc:View
    controllerName="empprojectworklist.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
     xmlns:l="sap.ui.layout"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title
                text="{i18n>worklistTitle}"
                level="H2"/>
        </semantic:titleHeading>
 
        <semantic:content>
        <l:VerticalLayout>

        <Panel id="Empdetails1" headerText="{i18n>Project Details}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Table
                id="table"
                width="auto"
                items="{
                    path: '/Employee',
                    sorter: {
                        path: 'EmpID',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="nameColumn">
                        <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                    </Column>
                    <Column id="unitNumberColumn" hAlign="End">
                        <Text text="{i18n>Department}" id="unitNumberColumnTitle"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{EmpID}"/>
                            <ObjectNumber
                                unit="{Department}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </content>

            </Panel>
            

            <Panel id="E" headerText="{i18n>Log Data}" class="sapUiResponsiveMargin" width="auto">
            <content>
<Table
id="table1"
 width="auto"
 items="{
 path: '/ChangeLog',
 sorter: {
 path: 'EmpChangeLogID',
 descending: false
 }
 }">

 <columns>
 <Column id="logid">
 <Text id="ELogID" text="{i18n>EmpChangeLogID}"/>
 </Column>
 <Column id="elid" hAlign="End">
 <Text id="text1" text="{i18n>EmpID}"/>
 </Column>
 <Column id="cd" hAlign="End">
 <Text id="text" text="{i18n>changeDate}"/>
 </Column>
 </columns>

 <items>
 <ColumnListItem>
 <cells>
 <Text id="t1" text="{EmpChangeLogID}"/>
 <Text id="t2" text="{EmpID}"/>
 <Text id="t3" text ="{changeDate}"/>
 </cells>
 </ColumnListItem>
 </items>
 </Table>
 </content>


     
    </Panel>

     </l:VerticalLayout>
    
        </semantic:content>
       

        

        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

    </semantic:SemanticPage>

</mvc:View>